<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSecondary">@color/colorAccentSecondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

    </style>


    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense" />

    <style name="BtnStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="Subhead" parent="@style/TextAppearance.AppCompat.Subhead"/>
    <style name="Caption" parent="@style/TextAppearance.AppCompat.Caption"/>


    <style name="AppTheme.NoActionBar.ColorFulNavBars.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.NoActionBar.ColorFulNavBars.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInputLayoutDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginRight">@dimen/_16sdp</item>
        <item name="android:layout_marginLeft">@dimen/_16sdp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxCornerRadiusTopStart">@dimen/_6sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_6sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_6sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_6sdp</item>
    </style>

    <style name="DarkEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:gestureColor">@color/colorAccent</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <!--<item name="android:background">@null</item>-->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>